{
  "name": "ai-plant-care-robot",
  "version": "1.0.0",
  "description": "AI智能植物养护机器人 - 桌面/小盆栽场景的萌系植物小帮手",
  "main": "index.js",
  "scripts": {
    "test": "jest --config tests/jest.config.js",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:properties": "jest --config tests/jest.config.js --testNamePattern=\"Property\"",
    "test:cloud": "jest --config tests/cloud-service/jest.config.js",
    "test:cloud:watch": "jest --config tests/cloud-service/jest.config.js --watch",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "type-check": "tsc --noEmit --project shared/tsconfig.json",
    "build:shared": "tsc --project shared/tsconfig.json",
    "dev:mobile": "cd mobile-app && npm run start",
    "dev:mobile:android": "cd mobile-app && npm run android",
    "dev:mobile:ios": "cd mobile-app && npm run ios",
    "install:mobile": "cd mobile-app && npm install",
    "install:all": "npm install && npm run install:mobile",
    "clean": "rm -rf node_modules mobile-app/node_modules shared/dist tests/coverage",
    "docs:generate": "typedoc --out docs shared/types.ts",
    "firmware:build": "cd firmware && pio run",
    "firmware:upload": "cd firmware && pio run --target upload",
    "firmware:monitor": "cd firmware && pio device monitor"
  },
  "keywords": [
    "iot",
    "plant-care",
    "esp32",
    "react-native",
    "smart-home",
    "agriculture",
    "sensors",
    "mobile-app"
  ],
  "author": "Plant Care Robot Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-plant-care-robot.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ai-plant-care-robot/issues"
  },
  "homepage": "https://github.com/your-org/ai-plant-care-robot#readme",
  "workspaces": [
    "mobile-app",
    "shared"
  ]
}